# ===================================================================
# JupyterHub Configuration for AKS
# Domain: notebook-fmagf.zafarlabs.com
# Authentication: Dummy (password: test123 for all users)
# ===================================================================

hub:
  config:
    JupyterHub:
      authenticator_class: dummy
    
    DummyAuthenticator:
      password: "test123"
    
    Authenticator:
      admin_users:
        - sysadmin
      allowed_users:
        - sysadmin
        - user01
        - user02
        - user03
  
  db:
    type: sqlite-pvc
    pvc:
      storage: 5Gi
      storageClassName: managed-csi
  
  nodeSelector:
    agentpool: hubpool

proxy:
  https:
    enabled: true
    type: letsencrypt
    letsencrypt:
      contactEmail: dda@zafarlabs.com
    hosts:
      - notebook-fmagf.zafarlabs.com
  
  service:
    type: LoadBalancer
  
  chp:
    nodeSelector:
      agentpool: hubpool

singleuser:
  nodeSelector:
    agentpool: userpool
  
  storage:
    type: dynamic
    capacity: 50Gi
    homeMountPath: /home/jovyan
    dynamic:
      storageClass: managed-csi
  
  cpu:
    limit: 2
    guarantee: 1
  memory:
    limit: 7G
    guarantee: 4G

cull:
  enabled: true
  timeout: 3600
  every: 600
  maxAge: 0
